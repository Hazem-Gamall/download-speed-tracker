{
    "manifest_version": 2,
    "name":"Download Speed Tracker",
    "version":"1.0",
    "description":"Monitor the download speed",
    

    "icons":{
        "16":"icons/icon16.png",
        "32":"icons/icon32.png",
        "128":"icons/icon128.png"
    },

    "options_ui": {
        "page": "src/options.html",
        "open_in_tab": true
      },

    "browser_action":{
        "default_icon":{
            "16":"icons/icon16.png",
            "32":"icons/icon32.png"
        }
    },

    "permissions":[
        "background",
        "storage"
    ],

 
    "background":{
        "scripts":["src/background.js"],
        "persistent": true
    }
}